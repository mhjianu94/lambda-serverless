{
  "name": "lambda-serverless",
  "version": "1.0.0",
  "description": "AWS Serverless Lambda setup with CDK",
  "private": true,
  "scripts": {
    "build": "cd infrastructure && npm run build",
    "watch": "cd infrastructure && npm run watch",
    "cdk": "cd infrastructure && npx cdk",
    "deploy": "cd infrastructure && npm run deploy",
    "destroy": "cd infrastructure && npm run destroy",
    "synth": "cd infrastructure && npm run synth",
    "diff": "cd infrastructure && npm run diff",
    "localstack:up": "docker compose up -d",
    "localstack:down": "docker compose down",
    "localstack:logs": "docker compose logs -f localstack",
    "bootstrap:local": "cd infrastructure && node ../scripts/run-with-localstack.js bootstrap",
    "localstack:setup-hosts": "node scripts/run-with-localstack.js setup-hosts",
    "deploy:local": "cd infrastructure && node ../scripts/run-with-localstack.js deploy --all --require-approval never",
    "destroy:local": "cd infrastructure && node ../scripts/run-with-localstack.js destroy --all --force"
  },
  "keywords": ["aws", "lambda", "cdk", "cloudformation"],
  "license": "ISC",
  "devDependencies": {
    "aws-cdk": "^2.100.0",
    "aws-cdk-local": "^3.0.0"
  }
}
